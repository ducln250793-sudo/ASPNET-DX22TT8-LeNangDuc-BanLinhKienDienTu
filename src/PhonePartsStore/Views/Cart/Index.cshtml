@model List<PhonePartsStore.Models.CartItem>

@{
    ViewData["Title"] = "Cart";
}
@{
    decimal subtotal = Model.Sum(i => i.Price * i.Quantity);
    decimal deliver = 30000;
    decimal total = subtotal + deliver;
}
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6 wow fadeInUp">Giỏ hàng</h1>
</div>

<div class="container py-5">
    <div class="table-responsive">
        <table class="table align-middle">
            <thead class="bg-light">
                <tr>
                    <th>ID</th>
                    <th>Tên sản phẩm</th>
                    <th>Hình ảnh</th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Tổng</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr><form></form></tr>
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td><img src="@item.ImageUrl" /></td>
                        <td>@item.Price.ToString("N0") ₫</td>
                        <td>
                            <div class="d-flex align-items-center justify-content-center" style="width: 120px;">
                                <a asp-action="Decrease" asp-controller="Cart" asp-route-id="@item.Id" 
                                class="btn btn-sm rounded-circle bg-light border d-flex align-items-center justify-content-center me-2" 
                                style="width:32px; height:32px;">
                                    <i class="fa fa-minus"></i>
                                </a>

                                <input type="text" name="quantity" class="form-control text-center border-0" value="@item.Quantity" style="width: 50px;" readonly />

                                <a asp-action="Increase" asp-controller="Cart" asp-route-id="@item.Id" 
                                class="btn btn-sm rounded-circle bg-light border d-flex align-items-center justify-content-center ms-2" 
                                style="width:32px; height:32px;">
                                    <i class="fa fa-plus"></i>
                                </a>
                            </div>
                        </td>
                        <td>@(((decimal)item.Price * item.Quantity).ToString("N0")) ₫</td>
                        <td>
                            <a asp-action="RemoveFromCart" asp-controller="Cart" asp-route-id="@item.Id"
                            class="btn btn-md rounded-circle bg-light border">
                                <i class="fa fa-times text-danger"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="row justify-content-end">
        <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
            <div class="bg-light rounded shadow-sm p-4">
                <h4>Tổng giỏ hàng</h4>
                <div class="d-flex justify-content-between mb-2">
                    <span>Tạm tính:</span>
                    <span>@Model.Sum(i => i.Price * i.Quantity).ToString("N0") ₫</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Phí vận chuyển:</span>
                    <span>30.000 ₫</span>
                </div>
                <div class="d-flex justify-content-between fw-bold text-primary">
                    <span>Tổng cộng:</span>
                    

                    <span>@total.ToString("N0") ₫</span>
                </div>
                <a asp-controller="CheckOut" asp-action="Index" class="btn btn-primary w-100 mt-3">Thanh toán ngay</a>
            </div>
        </div>
    </div>
</div>
