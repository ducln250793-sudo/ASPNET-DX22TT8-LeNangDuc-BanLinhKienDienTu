@model IEnumerable<PhonePartsStore.Models.Product>
@{
    ViewData["Title"] = "Shop";
    var selectedCategory = ViewBag.SelectedCategory as int?;
    var selectedBrand = ViewBag.SelectedBrand as int?;
    var sort = ViewBag.Sort as string ?? "";
    var page = (int)ViewBag.Page;
    var totalPages = (int)ViewBag.TotalPages;
}

<!-- Shop Page Start -->
<div class="container-fluid shop py-5">
    <div class="container">
        <div class="row g-4">

            <!-- SIDEBAR -->
            <div class="col-lg-3 wow fadeInUp" data-wow-delay="0.1s">
                <div class="product-categories mb-4">
                    <h4 class="text-primary mb-3 border-bottom pb-2">Danh mục sản phẩm</h4>
                    <ul class="list-unstyled">
                        @foreach (var c in ViewBag.Category)
                        {
                            <li>
                                <div class="categories-item d-flex justify-content-between align-items-center py-2 border-bottom">
                                    <a asp-controller="Shop" asp-action="Index" asp-route-category="@c.Id"
                                       class="text-dark @(selectedCategory == c.Id ? "fw-bold text-primary" : "")">
                                        <i class="fa fa-tag text-primary me-2"></i> @c.Name
                                    </a>
                                    <span class="text-muted">(@c.ProductCount)</span>
                                </div>
                            </li>
                        }
                    </ul>
                </div>

                <div class="product-categories mb-4">
                    <h4 class="text-primary mb-3 border-bottom pb-2">Thương hiệu</h4>
                    <ul class="list-unstyled">
                        @foreach (var b in ViewBag.Brand)
                        {
                            <li>
                                <div class="categories-item d-flex justify-content-between align-items-center py-2 border-bottom">
                                    <a asp-controller="Shop" asp-action="Index" asp-route-brand="@b.Id"
                                       class="text-dark @(selectedBrand == b.Id ? "fw-bold text-primary" : "")">
                                        <i class="fa fa-industry text-primary me-2"></i> @b.Name
                                    </a>
                                    <span class="text-muted">(@b.ProductCount)</span>
                                </div>
                            </li>
                        }
                    </ul>
                </div>

                <a href="#" class="d-block position-relative mb-4">
                    <img src="~/img/product-banner-2.jpg" class="img-fluid w-100 rounded" alt="Sale Banner">
                    <div class="position-absolute top-0 start-0 w-100 h-100 d-flex flex-column align-items-center justify-content-center text-center rounded"
                         style="background: rgba(242, 139, 0, 0.3);">
                        <h5 class="text-primary display-6">SALE</h5>
                        <h4 class="text-white mb-3">Giảm đến 50%</h4>
                        <span class="btn btn-primary rounded-pill px-4">Mua ngay</span>
                    </div>
                </a>
            </div>

            <!-- PRODUCTS -->
            <div class="col-lg-9 wow fadeInUp" data-wow-delay="0.1s">

                <!-- SEARCH + SORT -->
                <form asp-controller="Shop" asp-action="Index" method="get" class="mb-4 d-flex justify-content-between align-items-center">
                    <div class="input-group w-50">
                        <input type="text" name="keyword" value="@Context.Request.Query["keyword"]"
                               class="form-control p-3" placeholder="Tìm kiếm sản phẩm...">
                        <button type="submit" class="input-group-text p-3"><i class="fa fa-search"></i></button>
                    </div>
                    <div class="d-flex align-items-center">
                        <label for="sortSelect" class="me-2 fw-semibold text-secondary">Sort:</label>
                        <select id="sortSelect" name="sort" class="form-select form-select-sm" onchange="this.form.submit()">
                            <option value="">Mặc định</option>
                            <option value="price-asc" selected="@(sort == "price-asc")">Giá tăng dần</option>
                            <option value="price-desc" selected="@(sort == "price-desc")">Giá giảm dần</option>
                        </select>
                    </div>
                </form>

                <!-- PRODUCT GRID -->
                <div class="row g-4">
                    @if (!Model.Any())
                    {
                        <div class="col-12 text-center py-5">
                            <h5 class="text-muted">Không có sản phẩm nào phù hợp.</h5>
                        </div>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <div class="col-md-6 col-lg-4">
                                <div class="product-item rounded border shadow-sm h-100 d-flex flex-column justify-content-between">
                                    <div class="product-item-inner position-relative">
                                        <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id">
                                            <img src="@item.ImageUrl" class="img-fluid w-100 rounded-top" style="height: 220px; object-fit: cover;" alt="@item.Name" />
                                        </a>
                                        <div class="position-absolute top-0 end-0 bg-primary text-white small px-2 py-1 rounded-start">New</div>
                                    </div>

                                    <div class="text-center p-3 flex-grow-1 d-flex flex-column justify-content-between">
                                        <div>
                                            <h6 class="text-secondary mb-1">@item.Brand?.Name</h6>
                                            <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="h5 d-block">@item.Name</a>
                                        </div>
                                        <div class="mt-2">
                                            <del class="text-muted me-2">@((item.Price * 1.2m).ToString("N0")) đ</del>
                                            <span class="text-primary fw-bold">@item.Price.ToString("N0") đ</span>
                                        </div>
                                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.Id"
                                           class="btn btn-primary border-0 rounded-pill px-3 py-2 mt-3 text-white">
                                            <i class="fa fa-shopping-cart me-2"></i> Thêm vào giỏ
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>

                <!-- PAGINATION -->
                @if (totalPages > 1)
                {
                    <div class="pagination d-flex justify-content-center mt-5">
                        <a asp-action="Index" asp-route-page="@(page - 1)" class="rounded @(page == 1 ? "disabled" : "")">&laquo;</a>
                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <a asp-action="Index" asp-route-page="@i"
                               class="rounded @(i == page ? "active" : "")">@i</a>
                        }
                        <a asp-action="Index" asp-route-page="@(page + 1)" class="rounded @(page == totalPages ? "disabled" : "")">&raquo;</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Shop Page End -->
