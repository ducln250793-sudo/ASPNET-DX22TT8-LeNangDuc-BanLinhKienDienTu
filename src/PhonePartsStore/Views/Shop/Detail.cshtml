
@model PhonePartsStore.Models.ProductDetailViewModel

@{
    ViewData["Title"] = "Detail";
}
<!-- Header trang chi tiết -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6 wow fadeInUp" data-wow-delay="0.1s">Chi tiết sản phẩm</h1>
    <ol class="breadcrumb justify-content-center mb-0 wow fadeInUp" data-wow-delay="0.3s">
        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="#">Sản phẩm</a></li>
        <li class="breadcrumb-item active text-white">Chi tiết sản phẩm</li>
    </ol>
</div>
<!-- End Header -->

<!-- Chi tiết sản phẩm -->
<div class="container-fluid shop py-5">
    <div class="container py-5">
        <div class="row g-4">
            <div class="col-lg-12 col-xl-12 wow fadeInUp" data-wow-delay="0.1s">
                <div class="row g-4 single-product">
                    <!-- Ảnh sản phẩm -->
                    <div class="col-xl-6">
                        <div class="single-carousel owl-carousel">
                            <div class="single-item" data-dot="<img class='img-fluid' src='@Model.Product.ImageUrl' alt=''>">
                                <div class="single-inner bg-light rounded">
                                    <img src="@Model.Product.ImageUrl" class="img-fluid rounded" alt="Ảnh sản phẩm">
                                </div>
                            </div>
                            <div class="single-item" data-dot="<img class='img-fluid' src='@Model.Product.ImageUrl' alt=''>">
                                <div class="single-inner bg-light rounded">
                                    <img src="@Model.Product.ImageUrl" class="img-fluid rounded" alt="Ảnh sản phẩm">
                                </div>
                            </div>
                            <div class="single-item" data-dot="<img class='img-fluid' src='@Model.Product.ImageUrl' alt=''>">
                                <div class="single-inner bg-light rounded">
                                    <img src="@Model.Product.ImageUrl" class="img-fluid rounded" alt="Ảnh sản phẩm">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Thông tin sản phẩm -->
                    <div class="col-xl-6">
                        <h4 class="fw-bold mb-3">@Model.Product.Name</h4>
                        <p class="mb-3"> Danh mục: @Model.Product.Category?.Name</p>
                        <p class="mb-3">Hãng sản xuất: @Model.Product.Brand?.Name</p>
                        <h5 class="fw-bold mb-3 text-primary">@Model.Product.Price.ToString("N0") ₫</h5>
                        <div class="d-flex mb-4">
                            <i class="fa fa-star text-secondary"></i>
                            <i class="fa fa-star text-secondary"></i>
                            <i class="fa fa-star text-secondary"></i>
                            <i class="fa fa-star text-secondary"></i>
                            <i class="fa fa-star"></i>
                        </div>

                        <div class="mb-3">
                            <div class="btn btn-primary rounded text-white py-1 px-4 me-2">
                                <i class="fab fa-facebook-f me-1"></i> Chia sẻ
                            </div>
                            <div class="btn btn-secondary rounded text-white py-1 px-4 ms-2">
                                <i class="fab fa-twitter ms-1"></i> Chia sẻ
                            </div>
                        </div>

                        <div class="d-flex flex-column mb-3">
                            <small>Mã sản phẩm: @Model.Product.Id</small>
                            <small>Tình trạng: <strong class="text-primary">Còn hàng (@Model.Product.StockQuantity sản phẩm)</strong></small>
                        </div>

                        <p class="mb-4">
                            @Model.Product.Description
                         </p>
                        
                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="mb-4">
                            <input type="hidden" name="id" value="@Model.Product.Id" />
                            <input type="hidden" name="imageUrl" value="@Model.Product.ImageUrl" />
                            <input type="hidden" name="name" value="@Model.Product.Name" />
                            <input type="hidden" name="price" value="@Model.Product.Price" />
                            <div class="input-group quantity mb-5" style="width: 100px;">
                                <div class="input-group-btn">
                                    <div class="btn btn-sm btn-minus rounded-circle bg-light border qty-down">
                                        <i class="fa fa-minus"></i>
                                    </div>
                                </div>
                                <input type="number" name="quantity" value="1" class="form-control form-control-sm text-center border-0">
                                <div class="input-group-btn">
                                    <div class="btn btn-sm btn-plus rounded-circle bg-light border qty-up">
                                        <i class="fa fa-plus"></i>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary border border-secondary rounded-pill px-4 py-2 mb-4 text-white">
                                <i class="fa fa-shopping-bag me-2"></i> Thêm vào giỏ
                            </button>
                        </form>
                    </div>

                    <!-- Tab mô tả -->
                    <div class="col-lg-12">
                        <nav>
                            <div class="nav nav-tabs mb-3">
                                <button class="nav-link active border-white border-bottom-0" type="button"
                                        role="tab" id="nav-about-tab" data-bs-toggle="tab" data-bs-target="#nav-about"
                                        aria-controls="nav-about" aria-selected="true">
                                    Mô tả sản phẩm
                                </button>
                            </div>
                        </nav>
                        <div class="tab-content mb-5">
                            <div class="tab-pane active" id="nav-about" role="tabpanel" aria-labelledby="nav-about-tab">
                                @Model.Product.Description
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sản phẩm liên quan -->
    <div class="container-fluid related-product">
        <div class="container">
            <div class="mx-auto text-center pb-5" style="max-width: 700px;">
                <h4 class="text-primary mb-4 border-bottom border-primary border-2 d-inline-block p-2 title-border-radius wow fadeInUp"
                    data-wow-delay="0.1s">
                    Sản phẩm liên quan
                </h4>
                <p class="wow fadeInUp" data-wow-delay="0.2s">
                    Khám phá thêm các phụ kiện điện thoại đang được yêu thích – giá ưu đãi hấp dẫn!
                </p>
            </div>

            <div class="related-carousel owl-carousel pt-4">
                @foreach(var item in Model.RelatedProducts)
                {
                    <div class="related-item rounded">
                        <div class="related-item-inner border rounded">
                            <div class="related-item-inner-item">
                                <img src="@item.ImageUrl" class="img-fluid w-100 rounded-top" alt="">
                                <div class="related-new">Mới</div>
                                <div class="related-details">
                                    <a href="#"><i class="fa fa-eye fa-1x"></i></a>
                                </div>
                            </div>
                            <div class="text-center rounded-bottom p-4">
                                <a href="#" class="d-block mb-2">@item.Category?.Name</a>
                                <a href="#" class="d-block h4">@item.Name</a>
                                <del class="me-2 fs-5">@item.Price.ToString("N0")</del>
                                    <span class="text-primary fs-5">@item.Price.ToString("N0")</span>
                            </div>
                        </div>
                        <div class="related-item-add border border-top-0 rounded-bottom text-center p-4 pt-0">
                            <a href="#" class="btn btn-primary border-secondary rounded-pill py-2 px-4 mb-4">
                                <i class="fas fa-shopping-cart me-2"></i> Thêm vào giỏ
                            </a>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex">
                                    <i class="fas fa-star text-primary"></i>
                                    <i class="fas fa-star text-primary"></i>
                                    <i class="fas fa-star text-primary"></i>
                                    <i class="fas fa-star text-primary"></i>
                                    <i class="fas fa-star"></i>
                                </div>
                                <div class="d-flex">
                                    <a href="#" class="text-primary d-flex align-items-center justify-content-center me-3">
                                        <span class="rounded-circle btn-sm-square border"><i class="fas fa-random"></i></span>
                                    </a>
                                    <a href="#" class="text-primary d-flex align-items-center justify-content-center me-0">
                                        <span class="rounded-circle btn-sm-square border"><i class="fas fa-heart"></i></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                
            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Lấy các phần tử nút tăng, giảm và input số lượng
        const btnMinus = document.querySelectorAll('.qty-down');
        const btnPlus = document.querySelectorAll('.qty-up');
        const quantityInputs = document.querySelectorAll('input[name="quantity"]');

        // Xử lý sự kiện click nút giảm
        btnMinus.forEach(btn => {
            btn.addEventListener('click', function () {
                const input = this.closest('.input-group').querySelector('input[name="quantity"]');
                let value = parseInt(input.value);
                if (value > 1) {
                    input.value = value - 1;
                }
            });
        });

        // Xử lý sự kiện click nút tăng
        btnPlus.forEach(btn => {
            btn.addEventListener('click', function () {
                const input = this.closest('.input-group').querySelector('input[name="quantity"]');
                let value = parseInt(input.value);
                input.value = value + 1;
            });
        });

        // Đảm bảo input số lượng không nhận giá trị âm hoặc không hợp lệ
        quantityInputs.forEach(input => {
            input.addEventListener('change', function () {
                if (this.value < 1 || isNaN(this.value)) {
                    this.value = 1;
                }
            });
        });
    });
</script>
